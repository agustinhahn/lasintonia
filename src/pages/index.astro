---
interface Props {
	idItem: number;
	title: string;
	description: string;
	link: string;
	github: string;
	tags: [string];
}

import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
---

<Layout
	title="Portfolio de Agustin Hahn - Desarrollador y programador web"
	description="Contratame para construir soluciones"
>
	<main class="px-4">
		<SectionContainer>
			<div class="flex flex-col justify-center">
				<img src="/public/neon.svg" alt="linyefoto" />
			</div>
		</SectionContainer>
		<SectionContainer id="about">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-2 items-center text-white-900 opacity-80">
				UN ESPACIO PARA CONECTAR LA MENTE Y APAGAR EL RUIDO
			</h2>
			<h3 class="text-2xl mb-6 flex gap-x-3 items-center  text-white-900 opacity-80">
				Animate a cuestionar un poco y despertar el potencial dormido
			</h3>
		</SectionContainer>
		<a
			class="fixed bottom-4 right-4 opacity-50 bg-gray-700 text-white px-4 py-2 rounded-lg shadow transition-colors hover:bg-yellow-200/50"
			href="#nav">Volver arriba</a
		>
	</main>
</Layout>

<style>
	.fontSize {
		font-size: 15px;
	}

	h2{
		font-family: "Montserrat", sans-serif;
	}
</style>
