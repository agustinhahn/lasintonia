---
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
			rel="stylesheet"
		/>
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css"
			rel="stylesheet"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"
		></script>
	</body>
</html>
<!-- directiva que indica que los estilos son globales -->
<style is:global>
	:root {
		color-scheme: light dark;
		color: white;
	}
	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		/* para que se mueva para abajo suave */
		scroll-behavior: smooth;
	}
	body {
		position: absolute;
		display: flex;
		flex-direction: column;
		background-image: url(/public/Background.webp);
		width: 100%;
		height: 100%;
		background-repeat: no-repeat;
		background-size: cover; /* Tama√±o por defecto */
	}
	@media (max-width: 1100px) {
		body {
			background-image: url(/public/backgroundMobile.jpg);
			background-repeat: repeat;
		}
	}
</style>
